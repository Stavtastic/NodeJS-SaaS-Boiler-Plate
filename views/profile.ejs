<!doctype html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/style.css">
    <title>Hello, world!</title>
</head>
<body>
<!-- Start Navbar -->
<nav class="navbar fixed-top bg-white" style="border-bottom: 1px #f6f6f6 solid;">
    <div class="container-fluid">
        <a class="navbar-brand" href="#">
            <img src="/css/crown.svg" alt="" width="30" height="24" class="d-inline-block align-top" >
        </a>
        <a href="#menu-toggle" class="btn btn-default" id="menu-toggle" onclick="toggleMenu()"><i class="gg-menu"></i></a>
    </div>
</nav>
<!-- End Navbar -->
<!-- Start Main -->
<div id="wrapper">
    <!-- Sidebar -->
    <div id="sidebar-wrapper">
        <ul class="sidebar-nav mt-5">
            <li class="sidebar-brand">

                <h6>Welcome <%= user.name %></h6>

            </li>
            <%- include('dashboard-menu'); %>
        </ul>
    </div>
    <!-- /#sidebar-wrapper -->

    <!-- Page Content -->
    <div id="page-content-wrapper">
        <div class="container-fluid">
            <div class="row mt-md-5">
                <h2 class="mb-4">Manage your profile:</h2>
            </div>
            <div class="row p-3">
                <div class="col-md-4 bg-white rounded p-3">
                    <form action="/dashboard/profile" method="POST" class="pr-3">
                        <div class="mb-3">
                            <label for="name" class="form-label">Name</label>
                            <input type="text" class="form-control shadow-sm" id="name" name="name" placeholder="John Smith" value="<%= user.name %>">
                        </div>
                        <div class="mb-3">
                            <label for="company" class="form-label">Company Name</label>
                            <input type="text" class="form-control shadow-sm" id="company" name="company" placeholder="ACME ltd." value="<%= user.company %>">
                        </div>
                        <div class="mb-3">
                            <label for="companyregistrationnumber" class="form-label">Company RegistrationNumber</label>
                            <input type="text" class="form-control shadow-sm" id="companyregistrationnumber" name="companyregistrationnumber" placeholder="ACME ltd." value="<%= user.companyregistrationnumber %>">
                        </div>
                        <button type="submit" class="btn btn-primary">Update profile</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <!-- /#page-content-wrapper -->

</div>
<!-- /#wrapper -->
<!-- End Main -->
<!-- Optional JavaScript-->
<script type="text/javascript" name='Menu Changes'>
    var menuButton = document.querySelector('#menu-toggle');
    var menuWrapper = document.querySelector('#wrapper');
    menuButton.onclick = function() {
        menuWrapper.classList.toggle('toggled');
    }
</script>
<!-- Option 1: Bootstrap Bundle with Popper -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-b5kHyXgcpbZJO/tY9Ul7kGkf1S0CWuKcCD38l8YkeH8z8QjE0GmW1gYU5S9FOnJ0"
        crossorigin="anonymous"></script>
<script>
    function showPassword() {
        var x = document.getElementById("password");
        var y = document.getElementById("showPassword");
        if (x.type === "password") {
            x.type = "text";
            y.classList.toggle("gg-eye");
            y.classList.toggle("gg-eye-alt");
        } else {
            x.type = "password";
            y.classList.toggle("gg-eye-alt");
            y.classList.toggle("gg-eye");
        }
    }
</script>
</body>
</html>